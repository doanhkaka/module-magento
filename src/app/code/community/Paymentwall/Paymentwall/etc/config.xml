<?xml version="1.0"?>
<config>
    <modules>
        <Paymentwall_Paymentwall>
            <version>1.0.1</version>
        </Paymentwall_Paymentwall>
    </modules>
    <frontend>
        <routers>
            <paymentwall>
                <use>standard</use>
                <args>
                    <module>Paymentwall_Paymentwall</module>
                    <frontName>paymentwall</frontName>
                </args>
            </paymentwall>
        </routers>
        <layout>
            <updates>
                <paymentwall>
                    <file>paymentwall.xml</file>
                </paymentwall>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <paymentwall>
                <class>Paymentwall_Paymentwall_Model</class>
            </paymentwall>
        </models>
        <blocks>
            <paymentwall>
                <class>Paymentwall_Paymentwall_Block</class>
            </paymentwall>
        </blocks>
        <helpers>
            <paymentwall>
                <class>Paymentwall_Paymentwall_Helper</class>
            </paymentwall>
        </helpers>
        <events>
            <core_copy_fieldset_sales_convert_quote_payment_to_order_payment>
                <observers>
                    <paymentwall_pwpro>
                        <class>Paymentwall_Paymentwall_Model_Observer</class>
                        <method>addMoreDataToOrderPayment</method>
                    </paymentwall_pwpro>
                </observers>
            </core_copy_fieldset_sales_convert_quote_payment_to_order_payment>
        </events>
    </global>
    <default>
        <payment>
            <paymentwall_pwlocal>
                <title>Paymentwall PW Local</title>
                <active>1</active>
                <model>paymentwall/method_pwlocal</model>
                <order_status>pending_payment</order_status>
                <fee_payer>buyer</fee_payer>
                <allowspecific>0</allowspecific>
            </paymentwall_pwlocal>
            <paymentwall_pwpro>
                <title>Paymentwall PW Pro</title>
                <model>paymentwall/method_pwpro</model>
                <active>1</active>
                <order_status>pending</order_status>
                <payment_action>authorize_capture</payment_action>
                <allowspecific>0</allowspecific>
            </paymentwall_pwpro>
        </payment>
    </default>
</config>
